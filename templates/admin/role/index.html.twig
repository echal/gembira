                                               {{ perm_key in role_permissions[role_key] ? 'checked' : '' }}>
                                        <div class="flex-1">
                                            <span class="text-sm font-medium">{{ perm_info.name }}</span>
                                            <p class="text-xs text-gray-500">{{ perm_info.description }}</p>
                                        </div>
                                    </label>
                                {% endfor %}
