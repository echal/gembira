{% extends 'admin/_layout.html.twig' %}

{% block title %}Detail Event - Admin Gembira{% endblock %}

{% block page_icon %}üëÅÔ∏è{% endblock %}
{% block page_title %}Detail Event{% endblock %}
{% block page_description %}Lihat informasi lengkap event dan kegiatan{% endblock %}

{% block header_actions %}
                    <a href="{{ path('app_admin_event_edit', {id: event.id}) }}"
                       class="bg-yellow-500 hover:bg-yellow-600 text-white py-2 px-4 rounded-lg font-medium text-sm flex items-center">
                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                        </svg>
                        Edit Event
                    </a>
                    <a href="{{ path('app_admin_event_index') }}"
                       class="bg-gray-500 hover:bg-gray-600 text-white py-2 px-4 rounded-lg font-medium text-sm flex items-center">
                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
                        </svg>
                        Kembali
                    </a>
{% endblock %}

{% block admin_content %}
            <!-- Event Detail Card -->
            <div class="bg-white rounded-lg shadow-sm border overflow-hidden">
                <!-- Header dengan warna event -->
                <div class="px-6 py-4 border-b border-gray-200" style="background: linear-gradient(90deg, {{ event.warna|default('#3b82f6') }} 0%, rgba(59, 130, 246, 0.1) 100%);">
                    <div class="flex items-center">
                        <div class="w-4 h-4 rounded-full mr-3" style="background-color: {{ event.warna|default('#3b82f6') }}"></div>
                        <div>
                            <h2 class="text-xl font-bold text-gray-800">{{ event.judulEvent }}</h2>
                            <div class="flex items-center mt-1">
                                <span class="text-sm text-gray-600 mr-4">{{ event.kategoriIcon }} {{ event.kategoriNama }}</span>
                                {{ event.statusBadge|raw }}
                            </div>
                        </div>
                    </div>
                </div>

                <div class="p-6">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <!-- Informasi Waktu -->
                        <div class="space-y-4">
                            <h3 class="text-lg font-semibold text-gray-800 border-b pb-2">üìÖ Informasi Waktu</h3>

                            <div>
                                <label class="block text-sm font-medium text-gray-600 mb-1">Tanggal & Waktu Mulai</label>
                                <div class="bg-gray-50 rounded-lg p-3">
                                    <div class="text-lg font-semibold text-gray-800">{{ event.tanggalMulai|date('d F Y') }}</div>
                                    <div class="text-sm text-gray-600">{{ event.tanggalMulai|date('H:i') }} WITA</div>
                                </div>
                            </div>

                            {% if event.tanggalSelesai %}
                            <div>
                                <label class="block text-sm font-medium text-gray-600 mb-1">Tanggal & Waktu Selesai</label>
                                <div class="bg-gray-50 rounded-lg p-3">
                                    <div class="text-lg font-semibold text-gray-800">{{ event.tanggalSelesai|date('d F Y') }}</div>
                                    <div class="text-sm text-gray-600">{{ event.tanggalSelesai|date('H:i') }} WITA</div>
                                </div>
                            </div>

                            <div>
                                <label class="block text-sm font-medium text-gray-600 mb-1">Durasi Event</label>
                                <div class="bg-blue-50 rounded-lg p-3 text-sm text-blue-800">
                                    {% set duration = date(event.tanggalSelesai).diff(date(event.tanggalMulai)) %}
                                    {% if duration.days > 0 %}
                                        {{ duration.days }} hari, {{ duration.h }} jam, {{ duration.i }} menit
                                    {% elseif duration.h > 0 %}
                                        {{ duration.h }} jam, {{ duration.i }} menit
                                    {% else %}
                                        {{ duration.i }} menit
                                    {% endif %}
                                </div>
                            </div>
                            {% endif %}
                        </div>

                        <!-- Informasi Detail -->
                        <div class="space-y-4">
                            <h3 class="text-lg font-semibold text-gray-800 border-b pb-2">‚ÑπÔ∏è Detail Event</h3>

                            <div>
                                <label class="block text-sm font-medium text-gray-600 mb-1">Status Event</label>
                                <div class="flex items-center">
                                    {{ event.statusBadge|raw }}
                                    <button onclick="toggleStatus({{ event.id }})"
                                            class="ml-2 text-xs bg-gray-200 hover:bg-gray-300 px-2 py-1 rounded text-gray-600">
                                        Ubah Status
                                    </button>
                                </div>
                            </div>

                            <div>
                                <label class="block text-sm font-medium text-gray-600 mb-1">Kategori</label>
                                <div class="bg-gray-50 rounded-lg p-3">
                                    <span class="text-gray-800">{{ event.kategoriIcon }} {{ event.kategoriNama }}</span>
                                </div>
                            </div>

                            {% if event.lokasi %}
                            <div>
                                <label class="block text-sm font-medium text-gray-600 mb-1">Lokasi</label>
                                <div class="bg-gray-50 rounded-lg p-3">
                                    <div class="flex items-center text-gray-800">
                                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                                        </svg>
                                        {{ event.lokasi }}
                                    </div>
                                </div>
                            </div>
                            {% else %}
                            <div>
                                <label class="block text-sm font-medium text-gray-600 mb-1">Lokasi</label>
                                <div class="bg-gray-50 rounded-lg p-3 text-gray-400 italic">
                                    Lokasi tidak ditentukan
                                </div>
                            </div>
                            {% endif %}

                            <div>
                                <label class="block text-sm font-medium text-gray-600 mb-1">Warna Kalender</label>
                                <div class="flex items-center space-x-2">
                                    <div class="w-8 h-8 rounded-full border-2 border-gray-300" style="background-color: {{ event.warna|default('#3b82f6') }}"></div>
                                    <span class="text-gray-600 font-mono">{{ event.warna|default('#3b82f6') }}</span>
                                </div>
                            </div>

                            <div>
                                <label class="block text-sm font-medium text-gray-600 mb-1">Butuh Absensi</label>
                                <div class="bg-gray-50 rounded-lg p-3">
                                    {% if event.isButuhAbsensi %}
                                        <span class="inline-flex items-center text-green-800 bg-green-100 px-2 py-1 rounded-full text-sm">
                                            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                                            </svg>
                                            Ya, butuh absensi
                                        </span>
                                        {% if event.jamMulaiAbsensi and event.jamSelesaiAbsensi %}
                                            <div class="mt-2 text-sm text-gray-600">
                                                <strong>Jam Absensi:</strong> {{ event.jamMulaiAbsensi|date('H:i') }} - {{ event.jamSelesaiAbsensi|date('H:i') }} WITA
                                            </div>
                                        {% endif %}
                                    {% else %}
                                        <span class="text-gray-600">Tidak membutuhkan absensi</span>
                                    {% endif %}
                                </div>
                            </div>

                            {% if event.hasLinkMeeting %}
                            <div>
                                <label class="block text-sm font-medium text-gray-600 mb-1">Link Meeting</label>
                                <div class="bg-blue-50 rounded-lg p-3">
                                    <a href="{{ event.linkMeeting }}" target="_blank"
                                       class="inline-flex items-center text-blue-700 hover:text-blue-900 font-medium">
                                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                                        </svg>
                                        Join Meeting
                                    </a>
                                    <div class="text-xs text-blue-600 mt-1 break-all">{{ event.linkMeeting }}</div>
                                </div>
                            </div>
                            {% endif %}
                        </div>
                    </div>

                    <!-- Target Audience -->
                    <div class="mt-6 pt-6 border-t border-gray-200">
                        <h3 class="text-lg font-semibold text-gray-800 mb-4">üéØ Target Peserta</h3>
                        <div class="bg-sky-50 rounded-lg p-4">
                            {% if event.targetAudience == 'all' %}
                                <span class="inline-flex items-center text-sky-800 bg-sky-100 px-3 py-1 rounded-full">
                                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                                    </svg>
                                    Semua Unit Kerja
                                </span>
                            {% else %}
                                <span class="inline-flex items-center text-orange-800 bg-orange-100 px-3 py-1 rounded-full mb-3">
                                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/>
                                    </svg>
                                    Unit Kerja Tertentu
                                </span>

                                {% if event.targetUnits %}
                                <div class="flex flex-wrap gap-2 mt-2">
                                    {% for unitId in event.targetUnits %}
                                        {% set unit = unitKerjas|filter(u => u.id == unitId)|first %}
                                        {% if unit %}
                                            <span class="inline-flex items-center bg-white text-gray-800 px-3 py-1 rounded border border-gray-300 text-sm">
                                                {{ unit.namaUnit }}
                                            </span>
                                        {% endif %}
                                    {% endfor %}
                                </div>
                                {% endif %}
                            {% endif %}
                        </div>
                    </div>

                    {% if event.deskripsi %}
                    <!-- Deskripsi -->
                    <div class="mt-6">
                        <h3 class="text-lg font-semibold text-gray-800 border-b pb-2 mb-4">üìù Deskripsi</h3>
                        <div class="bg-gray-50 rounded-lg p-4">
                            <p class="text-gray-700 leading-relaxed whitespace-pre-line">{{ event.deskripsi }}</p>
                        </div>
                    </div>
                    {% endif %}

                    <!-- Info Metadata -->
                    <div class="mt-6 pt-6 border-t border-gray-200">
                        <h3 class="text-lg font-semibold text-gray-800 mb-4">üïí Informasi Sistem</h3>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-sm">
                            <div class="bg-gray-50 rounded-lg p-3">
                                <div class="text-gray-600 mb-1">Dibuat pada:</div>
                                <div class="font-medium text-gray-800">{{ event.createdAt|date('d/m/Y H:i:s') }}</div>
                                {% if event.createdBy %}
                                    <div class="text-gray-600 text-xs mt-1">oleh {{ event.createdBy.namaLengkap }}</div>
                                {% endif %}
                            </div>

                            {% if event.updatedAt %}
                            <div class="bg-gray-50 rounded-lg p-3">
                                <div class="text-gray-600 mb-1">Terakhir diupdate:</div>
                                <div class="font-medium text-gray-800">{{ event.updatedAt|date('d/m/Y H:i:s') }}</div>
                            </div>
                            {% endif %}
                        </div>
                    </div>

                    <!-- Actions -->
                    <div class="mt-6 pt-6 border-t border-gray-200">
                        <div class="flex items-center justify-between">
                            <div class="flex items-center space-x-2">
                                <a href="{{ path('app_admin_event_edit', {id: event.id}) }}"
                                   class="bg-yellow-500 hover:bg-yellow-600 text-white px-4 py-2 rounded-lg font-medium flex items-center">
                                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                                    </svg>
                                    Edit Event
                                </a>
                                {% if event.isButuhAbsensi %}
                                <a href="{{ path('app_admin_event_download_kehadiran', {id: event.id}) }}"
                                   class="bg-green-500 hover:bg-green-600 text-white px-4 py-2 rounded-lg font-medium flex items-center">
                                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M9 19l3 3m0 0l3-3m-3 3V10"/>
                                    </svg>
                                    Download Kehadiran
                                </a>
                                {% endif %}
                            </div>

                            <form method="post" action="{{ path('app_admin_event_delete', {id: event.id}) }}"
                                  style="display: inline;"
                                  onsubmit="return confirm('Yakin ingin menghapus event ini? Data yang dihapus tidak dapat dikembalikan.');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ event.id) }}">
                                <button type="submit" class="bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded-lg font-medium flex items-center">
                                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                                    </svg>
                                    Hapus Event
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
async function toggleStatus(eventId) {
    try {
        const response = await fetch(`/admin/event/api/toggle-status/${eventId}`, {
            method: 'POST',
            headers: {
                'X-Requested-With': 'XMLHttpRequest'
            }
        });

        const result = await response.json();

        if (result.success) {
            showToast(result.message, 'success');
            setTimeout(() => {
                location.reload();
            }, 1000);
        } else {
            showToast(result.message, 'error');
        }
    } catch (error) {
        showToast('Terjadi kesalahan saat mengubah status', 'error');
    }
}

function showToast(message, type = 'info') {
    const toast = document.createElement('div');
    toast.className = `fixed top-4 right-4 z-50 px-4 py-3 rounded-lg text-white font-medium shadow-lg ${
        type === 'success' ? 'bg-green-600' :
        type === 'error' ? 'bg-red-600' : 'bg-blue-600'
    }`;
    toast.textContent = message;

    document.body.appendChild(toast);

    setTimeout(() => {
        toast.remove();
    }, 3000);
}
</script>
{% endblock %}