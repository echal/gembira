{% extends 'base.html.twig' %}

{% block title %}#{{ tag.name }} - Inspirasi Gembira{% endblock %}

{% block body %}
<div class="min-h-screen bg-gradient-to-br from-purple-50 via-pink-50 to-blue-50">
    <!-- Header -->
    <div class="bg-white shadow-sm sticky top-0 z-10">
        <div class="container mx-auto px-4 py-4">
            <div class="flex items-center justify-between">
                <a href="{{ path('app_ikhlas') }}" class="flex items-center gap-2 text-gray-600 hover:text-purple-600 transition">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                    </svg>
                    <span class="font-medium">Kembali</span>
                </a>
            </div>
        </div>
    </div>

    <!-- Tag Header -->
    <div class="container mx-auto px-4 py-8">
        <div class="max-w-4xl mx-auto">
            <div class="bg-white rounded-2xl shadow-lg p-8 mb-6">
                <div class="flex items-center gap-4 mb-4">
                    <div class="w-16 h-16 bg-gradient-to-br from-purple-500 to-pink-500 rounded-full flex items-center justify-center text-3xl">
                        #
                    </div>
                    <div>
                        <h1 class="text-3xl font-bold text-gray-800">#{{ tag.name }}</h1>
                        <p class="text-gray-600 mt-1">
                            {{ tag.usageCount }} {{ tag.usageCount == 1 ? 'inspirasi' : 'inspirasi' }}
                        </p>
                    </div>
                </div>
                <p class="text-gray-600">
                    Semua inspirasi dengan tagar <span class="font-semibold text-purple-600">#{{ tag.name }}</span>
                </p>
            </div>

            <!-- Quotes Grid -->
            {% if quotes|length > 0 %}
                <div class="grid grid-cols-1 gap-6">
                    {% for quote in quotes %}
                        <div class="bg-white rounded-2xl shadow-lg p-6 hover:shadow-xl transition-shadow">
                            <!-- Quote Header -->
                            <div class="flex items-center gap-3 mb-4">
                                {% set authorPhoto = 'default-avatar.png' %}
                                {% if quote.author %}
                                    <img src="/uploads/pegawai/{{ authorPhoto }}"
                                         alt="{{ quote.author }}"
                                         class="w-12 h-12 rounded-full object-cover border-2 border-purple-200"
                                         onerror="this.src='/uploads/pegawai/default-avatar.png'">
                                {% endif %}
                                <div class="flex-1">
                                    <h3 class="font-bold text-gray-800">{{ quote.author ?? 'Anonim' }}</h3>
                                    <p class="text-sm text-gray-500">
                                        {{ quote.createdAt|date('d M Y H:i') }}
                                    </p>
                                </div>
                                {% if quote.category %}
                                    <span class="px-3 py-1 bg-purple-100 text-purple-700 rounded-full text-sm font-medium">
                                        {{ quote.category }}
                                    </span>
                                {% endif %}
                            </div>

                            <!-- Quote Content -->
                            <div class="mb-4">
                                <p class="text-gray-700 text-lg leading-relaxed whitespace-pre-wrap">{{ quote.content }}</p>
                            </div>

                            <!-- Hashtags -->
                            {% if quote.tags|length > 0 %}
                                <div class="flex flex-wrap gap-2 mb-4">
                                    {% for quoteTag in quote.tags %}
                                        <a href="{{ path('app_tag_show', {slug: quoteTag.slug}) }}"
                                           class="inline-flex items-center px-3 py-1 bg-blue-50 text-blue-600 rounded-full text-sm font-medium hover:bg-blue-100 transition">
                                            #{{ quoteTag.name }}
                                        </a>
                                    {% endfor %}
                                </div>
                            {% endif %}

                            <!-- Photos -->
                            {% if quote.photos is not empty %}
                                <div class="grid {% if quote.photos|length == 1 %}grid-cols-1{% else %}grid-cols-2{% endif %} gap-2 mb-4">
                                    {% for photo in quote.photos %}
                                        <img src="/uploads/inspirasi/{{ photo }}"
                                             alt="Foto Inspirasi"
                                             class="w-full h-48 object-cover rounded-lg">
                                    {% endfor %}
                                </div>
                            {% endif %}

                            <!-- Stats -->
                            <div class="flex items-center gap-6 text-gray-600 pt-4 border-t">
                                <span class="flex items-center gap-1">
                                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                                        <path d="M2 10.5a1.5 1.5 0 113 0v6a1.5 1.5 0 01-3 0v-6zM6 10.333v5.43a2 2 0 001.106 1.79l.05.025A4 4 0 008.943 18h5.416a2 2 0 001.962-1.608l1.2-6A2 2 0 0015.56 8H12V4a2 2 0 00-2-2 1 1 0 00-1 1v.667a4 4 0 01-.8 2.4L6.8 7.933a4 4 0 00-.8 2.4z"></path>
                                    </svg>
                                    {{ quote.totalLikes }}
                                </span>
                                <span class="flex items-center gap-1">
                                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M18 10c0 3.866-3.582 7-8 7a8.841 8.841 0 01-4.083-.98L2 17l1.338-3.123C2.493 12.767 2 11.434 2 10c0-3.866 3.582-7 8-7s8 3.134 8 7zM7 9H5v2h2V9zm8 0h-2v2h2V9zM9 9h2v2H9V9z" clip-rule="evenodd"></path>
                                    </svg>
                                    {{ quote.totalComments }}
                                </span>
                                <span class="flex items-center gap-1">
                                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                                        <path d="M10 12a2 2 0 100-4 2 2 0 000 4z"></path>
                                        <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd"></path>
                                    </svg>
                                    {{ quote.totalViews }}
                                </span>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <div class="bg-white rounded-2xl shadow-lg p-12 text-center">
                    <div class="text-6xl mb-4">üîç</div>
                    <h3 class="text-xl font-bold text-gray-800 mb-2">Belum Ada Inspirasi</h3>
                    <p class="text-gray-600">Belum ada inspirasi dengan tagar #{{ tag.name }}</p>
                    <a href="{{ path('app_ikhlas') }}" class="inline-block mt-6 px-6 py-3 bg-purple-600 text-white rounded-lg hover:bg-purple-700 transition">
                        Kembali ke Beranda
                    </a>
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
