{% extends 'admin/_layout.html.twig' %}

{% block title %}Detail Kehadiran {{ pegawai.nama }} - Admin Gembira{% endblock %}

{% block page_icon %}üëÅÔ∏è{% endblock %}
{% block page_title %}Detail Kehadiran Pegawai{% endblock %}
{% block page_description %}Riwayat absensi detail untuk {{ pegawai.nama }}{% endblock %}

{% block admin_content %}
    <!-- Back Button -->
    <div class="mb-6">
        <a href="{{ path('app_admin_laporan_kehadiran') }}"
           class="inline-flex items-center text-gray-600 hover:text-gray-900">
            ‚Üê Kembali ke Laporan Kehadiran
        </a>
    </div>

    <!-- Header Info Pegawai -->
    <div class="bg-white rounded-lg shadow-sm mb-6 p-6">
        <div class="flex items-center justify-between">
            <div class="flex items-center space-x-4">
                <div class="w-16 h-16 bg-purple-100 rounded-full flex items-center justify-center">
                    <span class="text-2xl">üë§</span>
                </div>
                <div>
                    <h2 class="text-xl font-bold text-gray-900">{{ pegawai.nama }}</h2>
                    <p class="text-gray-600">NIP: {{ pegawai.nip }}</p>
                    <p class="text-gray-600">{{ pegawai.jabatan }} - {{ pegawai.unitKerjaEntity ? pegawai.unitKerjaEntity.namaUnit : 'Unit tidak terdaftar' }}</p>
                </div>
            </div>
            <div class="text-right">
                <div class="text-sm text-gray-500">Periode</div>
                <div class="text-lg font-semibold text-gray-900">
                    {% if filter == 'bulan' %}
                        {{ periode|date('F Y') }}
                    {% else %}
                        {{ periode|date('d F Y') }}
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    <!-- Statistik Kehadiran -->
    <div class="grid grid-cols-1 md:grid-cols-5 gap-4 mb-6">
        <div class="bg-white rounded-lg shadow-sm border-l-4 border-green-500 p-4">
            <div class="text-xs font-bold text-green-600 uppercase mb-1">Hadir</div>
            <div class="text-2xl font-bold text-gray-800">{{ statistik.total_hadir }}</div>
        </div>
        <div class="bg-white rounded-lg shadow-sm border-l-4 border-yellow-500 p-4">
            <div class="text-xs font-bold text-yellow-600 uppercase mb-1">Izin/Sakit</div>
            <div class="text-2xl font-bold text-gray-800">{{ (statistik.total_izin ?? 0) + (statistik.total_sakit ?? 0) }}</div>
        </div>
        <div class="bg-white rounded-lg shadow-sm border-l-4 border-blue-500 p-4">
            <div class="text-xs font-bold text-blue-600 uppercase mb-1">Izin/Sakit</div>
            <div class="text-2xl font-bold text-gray-800">{{ statistik.total_izin }}</div>
        </div>
        <div class="bg-white rounded-lg shadow-sm border-l-4 border-red-500 p-4">
            <div class="text-xs font-bold text-red-600 uppercase mb-1">Tidak Hadir</div>
            <div class="text-2xl font-bold text-gray-800">{{ statistik.total_tidak_hadir }}</div>
        </div>
        <div class="bg-white rounded-lg shadow-sm border-l-4 border-purple-500 p-4">
            <div class="text-xs font-bold text-purple-600 uppercase mb-1">Total Hari</div>
            <div class="text-2xl font-bold text-gray-800">{{ statistik.total_hari }}</div>
        </div>
    </div>

    <!-- Tabel Detail Absensi -->
    <div class="bg-white rounded-lg shadow-sm">
        <div class="px-6 py-4 border-b border-gray-200">
            <h3 class="text-lg font-medium text-gray-900 flex items-center">
                <span class="mr-2">üìÖ</span> Riwayat Absensi Detail
            </h3>
        </div>

        {% if data_absensi %}
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Tanggal
                        </th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Waktu
                        </th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Status
                        </th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Lokasi
                        </th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Keterangan
                        </th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Aksi
                        </th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    {% for absensi in data_absensi %}
                    <tr class="hover:bg-gray-50">
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="text-sm font-medium text-gray-900">
                                {{ absensi.tanggal|date('d/m/Y') }}
                            </div>
                            <div class="text-sm text-gray-500">
                                {{ absensi.tanggal|date('l') }}
                            </div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="text-sm text-gray-900">
                                {{ absensi.waktuAbsensi ? absensi.waktuAbsensi|date('H:i:s') : '-' }}
                            </div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            {% set status = absensi.status ?? absensi.statusKehadiran %}
                            {% if status == 'hadir' %}
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                    ‚úÖ Hadir
                                </span>
                            {% elseif status == 'izin' %}
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                                    üìã Izin
                                </span>
                            {% elseif status == 'sakit' %}
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                                    üè• Sakit
                                </span>
                            {% else %}
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                                    ‚ùå Tidak Hadir
                                </span>
                            {% endif %}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            {% if absensi.latitude and absensi.longitude %}
                                <button onclick="showLocationModal('{{ absensi.latitude }}', '{{ absensi.longitude }}', '{{ pegawai.nama }}', '{{ absensi.tanggal|date('d/m/Y') }}')"
                                        class="text-blue-600 hover:text-blue-900 text-sm">
                                    üìç Lihat Lokasi
                                </button>
                            {% else %}
                                <span class="text-gray-400 text-sm">Tidak ada GPS</span>
                            {% endif %}
                        </td>
                        <td class="px-6 py-4">
                            <div class="text-sm text-gray-900 max-w-xs truncate">
                                {{ absensi.keterangan ?? 'Tidak ada keterangan' }}
                            </div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                            <button onclick="showDetailModal({{ absensi.id }})"
                                    class="text-purple-600 hover:text-purple-900 text-sm">
                                üëÅÔ∏è Detail
                            </button>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        {% else %}
        <div class="text-center py-12">
            <div class="text-gray-400 text-6xl mb-4">üìä</div>
            <h3 class="text-lg font-medium text-gray-900 mb-2">Tidak ada data absensi</h3>
            <p class="text-gray-500">Belum ada record absensi untuk pegawai ini pada periode yang dipilih.</p>

            <!-- Debug info -->
            <div class="mt-6 p-4 bg-yellow-50 rounded-lg text-left max-w-md mx-auto">
                <h4 class="font-semibold text-yellow-800 mb-2">üîç Info Debug:</h4>
                <div class="text-sm text-yellow-700 space-y-1">
                    <div><strong>Pegawai ID:</strong> {{ pegawai.id }}</div>
                    <div><strong>Nama:</strong> {{ pegawai.nama }}</div>
                    <div><strong>NIP:</strong> {{ pegawai.nip }}</div>
                    <div><strong>Periode:</strong> {{ periode }}</div>
                    <div><strong>Filter:</strong> {{ filter }}</div>
                </div>
                <div class="mt-3 text-xs text-yellow-600">
                    Jika data seharusnya ada, silakan hubungi administrator sistem.
                </div>
            </div>
        </div>
        {% endif %}
    </div>

    <!-- Modal untuk detail absensi individual -->
    <div id="detailModal" class="fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full hidden">
        <div class="relative top-20 mx-auto p-5 border w-11/12 max-w-4xl shadow-lg rounded-md bg-white">
            <div id="detailModalContent">
                <!-- Content akan dimuat via AJAX -->
                <div class="text-center py-8">
                    <div class="text-4xl mb-4">‚è≥</div>
                    <p>Memuat detail absensi...</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal untuk lokasi GPS -->
    <div id="locationModal" class="fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full hidden">
        <div class="relative top-20 mx-auto p-5 border w-11/12 max-w-2xl shadow-lg rounded-md bg-white">
            <div class="flex items-center justify-between mb-4">
                <h3 class="text-lg font-bold">üìç Lokasi Absensi</h3>
                <button onclick="closeLocationModal()" class="text-gray-400 hover:text-gray-600">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                </button>
            </div>
            <div id="locationModalContent">
                <!-- Content akan dimuat via JavaScript -->
            </div>
        </div>
    </div>
{% endblock %}

{% block admin_javascripts %}
<script>
function showDetailModal(absensiId) {
    const modal = document.getElementById('detailModal');
    const content = document.getElementById('detailModalContent');

    // Show modal
    modal.classList.remove('hidden');

    // Load detail content via AJAX
    fetch(`/admin/laporan-kehadiran/absensi-detail/${absensiId}`)
        .then(response => response.text())
        .then(html => {
            content.innerHTML = html;
        })
        .catch(error => {
            console.error('Error:', error);
            content.innerHTML = `
                <div class="text-center py-8">
                    <div class="text-4xl mb-4 text-red-500">‚ùå</div>
                    <p class="text-red-600">Gagal memuat detail absensi</p>
                    <button onclick="closeDetailModal()"
                            class="mt-4 bg-gray-600 text-white px-4 py-2 rounded">
                        Tutup
                    </button>
                </div>
            `;
        });
}

function closeDetailModal() {
    document.getElementById('detailModal').classList.add('hidden');
}

function showLocationModal(latitude, longitude, nama, tanggal) {
    const modal = document.getElementById('locationModal');
    const content = document.getElementById('locationModalContent');

    // Show modal
    modal.classList.remove('hidden');

    // Create location content
    const googleMapsUrl = `https://www.google.com/maps?q=${latitude},${longitude}`;

    content.innerHTML = `
        <div class="space-y-4">
            <div class="bg-blue-50 p-4 rounded-lg">
                <h4 class="font-semibold mb-2">${nama}</h4>
                <p class="text-sm text-gray-600">Absensi tanggal: ${tanggal}</p>
            </div>

            <div class="bg-gray-50 p-4 rounded-lg">
                <div class="grid grid-cols-2 gap-4 text-sm">
                    <div>
                        <span class="text-gray-600">Latitude:</span>
                        <span class="font-mono">${latitude}</span>
                    </div>
                    <div>
                        <span class="text-gray-600">Longitude:</span>
                        <span class="font-mono">${longitude}</span>
                    </div>
                </div>
            </div>

            <div class="flex space-x-3">
                <a href="${googleMapsUrl}" target="_blank"
                   class="flex-1 bg-green-600 text-white px-4 py-2 rounded text-center hover:bg-green-700">
                    üó∫Ô∏è Buka Google Maps
                </a>
                <button onclick="closeLocationModal()"
                        class="flex-1 bg-gray-600 text-white px-4 py-2 rounded hover:bg-gray-700">
                    Tutup
                </button>
            </div>
        </div>
    `;
}

function closeLocationModal() {
    document.getElementById('locationModal').classList.add('hidden');
}

// Function untuk menampilkan modal foto
function showPhotoModal(photoPath, nama) {
    console.log('Debug: photoPath =', photoPath);
    console.log('Debug: nama =', nama);

    const modal = document.createElement('div');
    modal.id = 'photoModal';
    modal.className = 'fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full';

    // Validasi path foto
    if (!photoPath || photoPath === 'null' || photoPath === '') {
        modal.innerHTML = `
            <div class="relative top-20 mx-auto p-5 border w-11/12 max-w-2xl shadow-lg rounded-md bg-white">
                <div class="flex items-center justify-between mb-4">
                    <h3 class="text-lg font-bold">üì∑ Foto Absensi - ${nama}</h3>
                    <button onclick="closePhotoModal()" class="text-gray-400 hover:text-gray-600">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                        </svg>
                    </button>
                </div>
                <div class="text-center py-8">
                    <div class="text-6xl mb-4">üì∑</div>
                    <p class="text-gray-500">Foto absensi tidak tersedia</p>
                </div>
                <div class="mt-4 flex justify-end">
                    <button onclick="closePhotoModal()" class="bg-gray-600 text-white px-4 py-2 rounded-lg hover:bg-gray-700">
                        Tutup
                    </button>
                </div>
            </div>
        `;
    } else {
        modal.innerHTML = `
            <div class="relative top-20 mx-auto p-5 border w-11/12 max-w-2xl shadow-lg rounded-md bg-white">
                <div class="flex items-center justify-between mb-4">
                    <h3 class="text-lg font-bold">üì∑ Foto Absensi - ${nama}</h3>
                    <button onclick="closePhotoModal()" class="text-gray-400 hover:text-gray-600">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                        </svg>
                    </button>
                </div>
                <div class="text-center">
                    <img src="${photoPath}" alt="Foto Absensi ${nama}"
                         class="max-w-full h-auto rounded-lg shadow-md mx-auto"
                         onerror="this.style.display='none'; this.parentNode.innerHTML='<div class=\\"text-center py-8\\"><div class=\\"text-6xl mb-4\\">‚ùå</div><p class=\\"text-red-500\\">Gagal memuat foto</p></div>';">
                </div>
                <div class="mt-4 flex justify-end">
                    <button onclick="closePhotoModal()" class="bg-gray-600 text-white px-4 py-2 rounded-lg hover:bg-gray-700">
                        Tutup
                    </button>
                </div>
            </div>
        `;
    }

    document.body.appendChild(modal);
}

function closePhotoModal() {
    const modal = document.getElementById('photoModal');
    if (modal) {
        modal.remove();
    }
}

// Function untuk menutup modal umum
function closeModal(modalId) {
    document.getElementById(modalId).classList.add('hidden');
}

// Close modals when clicking outside
document.getElementById('detailModal').addEventListener('click', function(e) {
    if (e.target === this) {
        closeDetailModal();
    }
});

document.getElementById('locationModal').addEventListener('click', function(e) {
    if (e.target === this) {
        closeLocationModal();
    }
});
</script>
{% endblock %}