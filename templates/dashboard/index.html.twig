    -webkit-transition: all 0.2s ease;
    transition: all 0.2s ease;
}

/* Prevent zoom saat focus input (iOS Safari) */
input[type="text"], input[type="password"] {
    font-size: 16px;
}

/* Shadow card yang lebih baik untuk mobile */
