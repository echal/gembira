{% extends 'base.html.twig' %}

{% block title %}Rekap Kehadiran {{ nama_bulan }} {{ tahun }} - Gembira{% endblock %}

{% block body %}
<!-- Header -->
<div class="bg-indigo-600 text-white">
    <div class="container mx-auto px-4 py-4">
        <div class="flex items-center justify-between">
            <div class="flex items-center">
                <a href="{{ path('app_admin_dashboard') }}" class="text-white mr-3">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
                    </svg>
                </a>
                <div>
                    <h1 class="text-xl font-bold">📊 Rekap Kehadiran</h1>
                    <p class="text-indigo-200 text-sm">{{ nama_bulan }} {{ tahun }}</p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container mx-auto px-4 py-6">
    <!-- Filter Periode -->
    <div class="bg-white rounded-lg shadow-sm p-4 mb-6">
        <h3 class="text-lg font-semibold mb-4">🗓️ Pilih Periode</h3>
        <form method="GET" class="flex flex-col md:flex-row gap-4">
            <div class="flex-1">
                <label class="block text-sm font-medium text-gray-700 mb-2">Bulan</label>
                <select name="bulan" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500">
                    {% for i in 1..12 %}
                        {% set nama_bulan_loop = ['', 'Januari', 'Februari', 'Maret', 'April', 'Mei', 'Juni', 'Juli', 'Agustus', 'September', 'Oktober', 'November', 'Desember'] %}
                        <option value="{{ i }}" {% if i == bulan %}selected{% endif %}>{{ nama_bulan_loop[i] }}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="flex-1">
                <label class="block text-sm font-medium text-gray-700 mb-2">Tahun</label>
                <select name="tahun" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500">
                    {% for i in 2020..2030 %}
                        <option value="{{ i }}" {% if i == tahun %}selected{% endif %}>{{ i }}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="flex-none">
                <label class="block text-sm font-medium text-gray-700 mb-2">&nbsp;</label>
                <button type="submit" class="w-full md:w-auto bg-indigo-600 hover:bg-indigo-700 text-white px-6 py-2 rounded-lg font-medium transition-colors">
                    🔍 Tampilkan Data
                </button>
            </div>
        </form>
    </div>

    <!-- Ringkasan Kehadiran -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-6">
        <div class="bg-white rounded-lg shadow-sm p-4">
            <div class="flex items-center">
                <div class="text-2xl mr-3">👥</div>
                <div>
                    <div class="text-2xl font-bold text-gray-800">{{ data_rekap.total_pegawai }}</div>
                    <div class="text-xs text-gray-600">Total Pegawai</div>
                </div>
            </div>
        </div>
        
        <div class="bg-white rounded-lg shadow-sm p-4">
            <div class="flex items-center">
                <div class="text-2xl mr-3">📅</div>
                <div>
                    <div class="text-2xl font-bold text-blue-600">{{ data_rekap.total_hari_kerja }}</div>
                    <div class="text-xs text-gray-600">Hari Kerja</div>
                </div>
            </div>
        </div>
        
        <div class="bg-white rounded-lg shadow-sm p-4">
            <div class="flex items-center">
                <div class="text-2xl mr-3">✅</div>
                <div>
                    <div class="text-2xl font-bold text-green-600">{{ data_rekap.total_hadir }}</div>
                    <div class="text-xs text-gray-600">Total Kehadiran</div>
                </div>
            </div>
        </div>
        
        <div class="bg-white rounded-lg shadow-sm p-4">
            <div class="flex items-center">
                <div class="text-2xl mr-3">📈</div>
                <div>
                    <div class="text-2xl font-bold text-purple-600">{{ data_rekap.rata_rata_kehadiran|number_format(1) }}%</div>
                    <div class="text-xs text-gray-600">Rata-rata Kehadiran</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Export Buttons -->
    <div class="bg-white rounded-lg shadow-sm p-4 mb-6">
        <h3 class="text-lg font-semibold mb-4">💾 Export Laporan</h3>
        <div class="flex flex-col md:flex-row gap-3">
            <form method="POST" action="{{ path('app_laporan_export_csv') }}" class="flex-1">
                <input type="hidden" name="bulan" value="{{ bulan }}">
                <input type="hidden" name="tahun" value="{{ tahun }}">
                <button type="submit" class="w-full bg-green-600 hover:bg-green-700 text-white py-2 px-4 rounded-lg font-medium transition-colors">
                    📊 Download Excel (CSV)
                </button>
            </form>
            
            <form method="POST" action="{{ path('app_laporan_export_pdf') }}" class="flex-1">
                <input type="hidden" name="bulan" value="{{ bulan }}">
                <input type="hidden" name="tahun" value="{{ tahun }}">
                <button type="submit" class="w-full bg-red-600 hover:bg-red-700 text-white py-2 px-4 rounded-lg font-medium transition-colors">
                    📄 Download PDF
                </button>
            </form>
        </div>
    </div>

    <!-- Detail Kehadiran Pegawai -->
    <div class="bg-white rounded-lg shadow-sm overflow-hidden">
        <div class="bg-gray-50 px-4 py-3 border-b">
            <h3 class="text-lg font-semibold">📋 Detail Kehadiran Pegawai</h3>
        </div>
        
        <!-- Mobile View -->
        <div class="md:hidden">
            {% for pegawai in data_rekap.detail_pegawai %}
            <div class="p-4 border-b border-gray-200">
                <div class="flex items-center justify-between mb-2">
                    <div class="font-medium text-gray-800">{{ pegawai.nama }}</div>
                    <div class="text-sm {% if pegawai.persentase_kehadiran >= 80 %}text-green-600{% elseif pegawai.persentase_kehadiran >= 60 %}text-yellow-600{% else %}text-red-600{% endif %} font-semibold">
                        {{ pegawai.persentase_kehadiran|number_format(1) }}%
                    </div>
                </div>
                <div class="text-sm text-gray-600 space-y-1">
                    <div>NIP: {{ pegawai.nip }}</div>
                    <div>{{ pegawai.jabatan }} - {{ pegawai.unit_kerja }}</div>
                    <div class="flex justify-between">
                        <span>Hadir: {{ pegawai.total_hadir }}/{{ pegawai.total_hari_kerja }}</span>
                        <span>Tidak Hadir: {{ pegawai.total_tidak_hadir }}</span>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>

        <!-- Desktop Table View -->
        <div class="hidden md:block overflow-x-auto">
            <table class="w-full">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">NIP</th>
                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Nama Pegawai</th>
                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Jabatan</th>
                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Unit Kerja</th>
                        <th class="px-4 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Hari Kerja</th>
                        <th class="px-4 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Hadir</th>
                        <th class="px-4 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Tidak Hadir</th>
                        <th class="px-4 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Kehadiran (%)</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    {% for pegawai in data_rekap.detail_pegawai %}
                    <tr class="hover:bg-gray-50">
                        <td class="px-4 py-3 text-sm text-gray-900">{{ pegawai.nip }}</td>
                        <td class="px-4 py-3 text-sm font-medium text-gray-900">{{ pegawai.nama }}</td>
                        <td class="px-4 py-3 text-sm text-gray-600">{{ pegawai.jabatan }}</td>
                        <td class="px-4 py-3 text-sm text-gray-600">{{ pegawai.unit_kerja }}</td>
                        <td class="px-4 py-3 text-sm text-center text-gray-900">{{ pegawai.total_hari_kerja }}</td>
                        <td class="px-4 py-3 text-sm text-center text-green-600 font-semibold">{{ pegawai.total_hadir }}</td>
                        <td class="px-4 py-3 text-sm text-center text-red-600 font-semibold">{{ pegawai.total_tidak_hadir }}</td>
                        <td class="px-4 py-3 text-sm text-center">
                            <span class="px-2 py-1 text-xs font-semibold rounded-full 
                                {% if pegawai.persentase_kehadiran >= 80 %}bg-green-100 text-green-800
                                {% elseif pegawai.persentase_kehadiran >= 60 %}bg-yellow-100 text-yellow-800
                                {% else %}bg-red-100 text-red-800{% endif %}">
                                {{ pegawai.persentase_kehadiran|number_format(1) }}%
                            </span>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <!-- Info Keterangan -->
    <div class="bg-blue-50 rounded-lg p-4 mt-6">
        <h3 class="font-semibold text-blue-800 mb-2">ℹ️ Keterangan</h3>
        <ul class="text-sm text-blue-700 space-y-1">
            <li>• <strong>Hari Kerja:</strong> Senin-Jumat (kecuali hari libur nasional)</li>
            <li>• <strong>Status Kehadiran:</strong> 
                <span class="text-green-600">≥80% Baik</span>, 
                <span class="text-yellow-600">60-79% Cukup</span>, 
                <span class="text-red-600">&lt;60% Kurang</span>
            </li>
            <li>• <strong>Data dihitung:</strong> Berdasarkan absensi yang statusnya 'hadir'</li>
        </ul>
    </div>
</div>
{% endblock %}