{% extends 'admin/_layout.html.twig' %}

{% block title %}Kelola Kepala Bidang - Admin Gembira{% endblock %}

{% block page_icon %}üëî{% endblock %}
{% block page_title %}Kelola Kepala Bidang{% endblock %}
{% block page_description %}Mengelola data kepala bidang dalam struktur organisasi{% endblock %}

{% block header_actions %}
    <button onclick="showAddModal()"
            class="bg-purple-600 hover:bg-purple-700 text-white px-4 py-2 rounded-lg text-sm font-medium flex items-center">
        <span class="mr-2">‚ûï</span> Tambah Kepala Bidang
    </button>
{% endblock %}

{% block admin_content %}
<div class="bg-white rounded-lg shadow-sm">
    <div class="px-6 py-4 border-b border-gray-200">
        <h3 class="text-lg font-medium text-gray-900 flex items-center">
            <span class="mr-2">üëî</span> Daftar Kepala Bidang
        </h3>
    </div>

    <div class="p-6">
        {% if kepala_bidang_list|length > 0 %}
            <div class="space-y-3">
                {% for kepala in kepala_bidang_list %}
                <div class="flex items-center justify-between p-4 border border-gray-200 rounded-lg hover:border-gray-300 transition-colors">
                    <div class="flex items-center space-x-4">
                        <div class="text-2xl">üëî</div>
                        <div>
                            <div class="font-medium text-gray-800">{{ kepala.nama }}</div>
                            <div class="text-sm text-gray-600">NIP: {{ kepala.nip }}</div>
                            <div class="text-sm text-gray-600">{{ kepala.jabatan }}</div>
                            {% if kepala.pangkatGol %}
                                <div class="text-sm text-gray-600">Pangkat/Gol: {{ kepala.pangkatGol }}</div>
                            {% endif %}
                            <div class="text-xs text-blue-600 bg-blue-50 px-2 py-1 rounded mt-1 inline-block">
                                üè¢ {{ kepala.namaUnitKerja }}
                            </div>
                        </div>
                    </div>
                    <div class="flex items-center space-x-2">
                        <button onclick="editKepalaBidang({{ kepala.id }})"
                                class="p-2 text-indigo-600 hover:bg-indigo-50 rounded-lg transition-colors"
                                title="Edit Kepala Bidang">
                            ‚úèÔ∏è
                        </button>
                        <button onclick="deleteKepalaBidang({{ kepala.id }}, '{{ kepala.nama }}')"
                                class="p-2 text-red-600 hover:bg-red-50 rounded-lg transition-colors"
                                title="Hapus Kepala Bidang">
                            üóëÔ∏è
                        </button>
                    </div>
                </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="text-center py-12">
                <div class="text-6xl mb-4">üëî</div>
                <div class="text-lg font-medium text-gray-700 mb-2">Belum ada kepala bidang yang terdaftar</div>
                <div class="text-sm text-gray-500">Tambahkan kepala bidang untuk melengkapi struktur organisasi</div>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}

{% block admin_javascripts %}
{{ parent() }}

<!-- Modal Tambah/Edit Kepala Bidang -->
<div id="kepalaBidangModal" class="hidden fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full z-50">
    <div class="relative top-20 mx-auto p-5 border w-11/12 md:w-2/3 lg:w-1/2 shadow-lg rounded-md bg-white">
        <div class="flex items-center justify-between p-4 border-b border-gray-200">
            <h3 id="modalTitle" class="text-lg font-medium text-gray-900 flex items-center">
                <span class="mr-2">üëî</span> Tambah Kepala Bidang
            </h3>
            <button type="button" class="text-gray-400 hover:text-gray-600" onclick="closeModal()">
                <span class="text-2xl">&times;</span>
            </button>
        </div>

        <form id="kepalaBidangForm" class="p-4">
            <input type="hidden" id="kepalaBidangId" name="id">

            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                    <label for="nama" class="block text-sm font-medium text-gray-700 mb-2">Nama Lengkap *</label>
                    <input type="text" id="nama" name="nama" required
                           class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-purple-500">
                </div>

                <div>
                    <label for="nip" class="block text-sm font-medium text-gray-700 mb-2">NIP *</label>
                    <input type="text" id="nip" name="nip" required maxlength="18" pattern="[0-9]{18}"
                           class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-purple-500"
                           placeholder="18 digit angka">
                    <small class="text-gray-500">NIP harus 18 digit angka</small>
                </div>

                <div>
                    <label for="jabatan" class="block text-sm font-medium text-gray-700 mb-2">Jabatan *</label>
                    <input type="text" id="jabatan" name="jabatan" required
                           class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-purple-500"
                           placeholder="Contoh: Kepala Bidang IT">
                </div>

                <div>
                    <label for="pangkat_gol" class="block text-sm font-medium text-gray-700 mb-2">Pangkat/Golongan</label>
                    <input type="text" id="pangkat_gol" name="pangkat_gol"
                           class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-purple-500"
                           placeholder="Contoh: III/d">
                </div>

                <div class="md:col-span-2">
                    <label for="unit_kerja_id" class="block text-sm font-medium text-gray-700 mb-2">Unit Kerja *</label>
                    <select id="unit_kerja_id" name="unit_kerja_id" required
                            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-purple-500">
                        <option value="">Pilih Unit Kerja...</option>
                        {% for unit in unit_kerja_list %}
                            <option value="{{ unit.id }}">{{ unit.namaUnit }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>

            <div class="flex justify-end space-x-3 mt-6 pt-4 border-t border-gray-200">
                <button type="button" class="px-4 py-2 bg-gray-600 hover:bg-gray-700 text-white rounded-md" onclick="closeModal()">
                    Batal
                </button>
                <button type="submit" id="submitBtn" class="px-4 py-2 bg-purple-600 hover:bg-purple-700 text-white rounded-md">
                    Simpan
                </button>
            </div>
        </form>
    </div>
</div>

<script>
// Modal functions
function showModal() {
    document.getElementById('kepalaBidangModal').classList.remove('hidden');
}

function closeModal() {
    document.getElementById('kepalaBidangModal').classList.add('hidden');
    resetForm();
}

function showAddModal() {
    document.getElementById('modalTitle').innerHTML = '<span class="mr-2">üëî</span> Tambah Kepala Bidang';
    document.getElementById('submitBtn').textContent = 'Simpan';
    resetForm();
    showModal();
}

function resetForm() {
    document.getElementById('kepalaBidangForm').reset();
    document.getElementById('kepalaBidangId').value = '';
}

// Handle form submit
document.getElementById('kepalaBidangForm').addEventListener('submit', async function(e) {
    e.preventDefault();

    const formData = new FormData(this);
    const kepalaBidangId = formData.get('id');

    const data = {
        nama: formData.get('nama'),
        nip: formData.get('nip'),
        jabatan: formData.get('jabatan'),
        pangkat_gol: formData.get('pangkat_gol'),
        unit_kerja_id: formData.get('unit_kerja_id')
    };

    try {
        let url, method;
        if (kepalaBidangId) {
            url = `{{ path('app_struktur_organisasi_update_kepala_bidang', {id: '__ID__'}) }}`.replace('__ID__', kepalaBidangId);
            method = 'POST';
        } else {
            url = '{{ path('app_struktur_organisasi_create_kepala_bidang') }}';
            method = 'POST';
        }

        const response = await fetch(url, {
            method: method,
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify(data)
        });

        const result = await response.json();

        if (result.success) {
            alert(result.message);
            closeModal();
            location.reload();
        } else {
            alert('Error: ' + result.message);
        }
    } catch (error) {
        alert('Terjadi kesalahan: ' + error.message);
    }
});

// Edit kepala bidang
async function editKepalaBidang(id) {
    try {
        const response = await fetch(`{{ path('app_struktur_organisasi_edit_kepala_bidang', {id: '__ID__'}) }}`.replace('__ID__', id));
        const result = await response.json();

        if (result.success) {
            const kepala = result.kepala_bidang;

            document.getElementById('modalTitle').innerHTML = '<span class="mr-2">‚úèÔ∏è</span> Edit Kepala Bidang';
            document.getElementById('submitBtn').textContent = 'Update';

            document.getElementById('kepalaBidangId').value = kepala.id;
            document.getElementById('nama').value = kepala.nama;
            document.getElementById('nip').value = kepala.nip;
            document.getElementById('jabatan').value = kepala.jabatan;
            document.getElementById('pangkat_gol').value = kepala.pangkatGol || '';
            document.getElementById('unit_kerja_id').value = kepala.unitKerjaId;

            showModal();
        } else {
            alert('Error: ' + result.message);
        }
    } catch (error) {
        alert('Terjadi kesalahan: ' + error.message);
    }
}

// Delete kepala bidang
async function deleteKepalaBidang(id, nama) {
    if (confirm(`Apakah Anda yakin ingin menghapus kepala bidang "${nama}"? Aksi ini tidak dapat dibatalkan!`)) {
        try {
            const response = await fetch(`{{ path('app_struktur_organisasi_delete_kepala_bidang', {id: '__ID__'}) }}`.replace('__ID__', id), {
                method: 'DELETE'
            });

            const result = await response.json();

            if (result.success) {
                alert(result.message);
                location.reload();
            } else {
                alert('Error: ' + result.message);
            }
        } catch (error) {
            alert('Terjadi kesalahan: ' + error.message);
        }
    }
}

// Validate NIP input (only numbers, max 18 digits)
document.getElementById('nip').addEventListener('input', function(e) {
    const value = e.target.value.replace(/\D/g, ''); // Remove non-digits
    e.target.value = value.substring(0, 18); // Max 18 digits
});

// Close modal when clicking outside
window.onclick = function(event) {
    const modal = document.getElementById('kepalaBidangModal');
    if (event.target === modal) {
        closeModal();
    }
}
</script>
{% endblock %}