<script>
// Modal functions
function bukaModal() {
    document.getElementById('modalTambahPegawai').classList.remove('hidden');
    document.body.classList.add('overflow-hidden');
}

function tutupModal() {
    document.getElementById('modalTambahPegawai').classList.add('hidden');
    document.body.classList.remove('overflow-hidden');
    // Reset form
    document.getElementById('formTambahPegawai').reset();
}

// Event listeners
document.getElementById('btnTambahPegawai').addEventListener('click', bukaModal);

// Form submission
document.getElementById('formTambahPegawai').addEventListener('submit', async function(e) {
    e.preventDefault();
    
    const formData = new FormData(this);
    const submitButton = this.querySelector('button[type="submit"]');
    const originalText = submitButton.innerHTML;
    
    // Disable button dan ubah text
    submitButton.disabled = true;
    submitButton.innerHTML = 'â³ Menyimpan...';
    
    try {
        const response = await fetch('{{ path("app_admin_tambah_pegawai") }}', {
            method: 'POST',
            body: formData
        });
        
        const result = await response.json();
        
        if (result.success) {
            // Tampilkan pesan sukses
            alert(result.message);
            
            // Tutup modal
            tutupModal();
            
            // Refresh halaman untuk menampilkan data baru
            window.location.reload();
        } else {
            // Tampilkan pesan error
            alert(result.message);
        }
    } catch (error) {
        alert('âŒ Terjadi kesalahan saat menyimpan data: ' + error.message);
    } finally {
        // Restore button
        submitButton.disabled = false;
        submitButton.innerHTML = originalText;
    }
});

// ESC key untuk tutup modal
document.addEventListener('keydown', function(e) {
    if (e.key === 'Escape' && !document.getElementById('modalTambahPegawai').classList.contains('hidden')) {
        tutupModal();
    }
});

// Toggle submenu function
function toggleSubmenu(menuId) {
    const submenu = document.getElementById(menuId);
    const arrow = submenu.previousElementSibling.querySelector('.submenu-arrow');
    
    if (submenu.classList.contains('hidden')) {
        submenu.classList.remove('hidden');
        arrow.classList.add('rotate-180');
    } else {
        submenu.classList.add('hidden');
        arrow.classList.remove('rotate-180');
    }
}
</script>

