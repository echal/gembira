{% extends 'base.html.twig' %}

{% block title %}Ganti Password - Gembira{% endblock %}

{% block body %}
<!-- Header -->
<div class="bg-gradient-to-r from-sky-400 to-sky-500 text-white sticky top-0 z-40">
    <div class="container mx-auto px-4 py-4">
        <div class="flex items-center justify-between">
            <div class="flex items-center">
                <a href="{{ path('app_dashboard') }}" class="text-white mr-3 p-2 hover:bg-sky-600 rounded-lg">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
                    </svg>
                </a>
                <div>
                    <h1 class="text-lg font-bold">🔐 Ganti Password</h1>
                    <p class="text-sky-200 text-sm">Ubah password login Anda</p>
                </div>
            </div>
            
            <!-- User Info -->
            <div class="text-right">
                <div class="text-sm font-medium">{{ pegawai.nama }}</div>
                <div class="text-xs text-sky-200">{{ pegawai.nip }}</div>
            </div>
        </div>
    </div>
</div>

<div class="min-h-screen bg-gray-100 pb-20">
    <div class="container mx-auto px-4 py-6">
        
        <!-- Info Box -->
        <div class="bg-blue-50 border border-blue-200 rounded-xl p-4 mb-6">
            <div class="flex items-start">
                <div class="text-2xl mr-3">💡</div>
                <div>
                    <h3 class="font-semibold text-blue-800 mb-1">Tips Keamanan Password</h3>
                    <ul class="text-sm text-blue-700 space-y-1">
                        <li>• Minimal 6 karakter</li>
                        <li>• Gunakan kombinasi huruf dan angka</li>
                        <li>• Jangan gunakan password yang mudah ditebak</li>
                        <li>• Ganti password secara berkala</li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Form Ganti Password -->
        <div class="bg-white rounded-xl shadow-sm p-6">
            <h3 class="text-lg font-semibold mb-6">🔒 Ubah Password Login</h3>
            
            <form id="form-ganti-password" class="space-y-6">
                <!-- Password Lama -->
                <div>
                    <label for="password_lama" class="block text-sm font-medium text-gray-700 mb-2">
                        🔑 Password Lama
                    </label>
                    <input type="password" 
                           id="password_lama" 
                           name="password_lama"
                           class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-sky-500 focus:border-sky-500 text-base"
                           placeholder="Masukkan password lama Anda"
                           required>
                </div>

                <!-- Password Baru -->
                <div>
                    <label for="password_baru" class="block text-sm font-medium text-gray-700 mb-2">
                        🔐 Password Baru
                    </label>
                    <input type="password" 
                           id="password_baru" 
                           name="password_baru"
                           class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-sky-500 focus:border-sky-500 text-base"
                           placeholder="Masukkan password baru (minimal 6 karakter)"
                           required
                           minlength="6">
                    <div class="mt-1 text-xs text-gray-500">Minimal 6 karakter</div>
                </div>

                <!-- Konfirmasi Password -->
                <div>
                    <label for="konfirmasi_password" class="block text-sm font-medium text-gray-700 mb-2">
                        ✅ Konfirmasi Password Baru
                    </label>
                    <input type="password" 
                           id="konfirmasi_password" 
                           name="konfirmasi_password"
                           class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-sky-500 focus:border-sky-500 text-base"
                           placeholder="Ulangi password baru"
                           required>
                </div>

                <!-- Submit Button -->
                <div class="pt-4">
                    <button type="submit" 
                            id="btn-submit"
                            class="w-full bg-sky-500 hover:bg-sky-600 active:bg-sky-700 text-white py-4 px-4 rounded-xl font-semibold text-lg shadow-lg transition-colors touch-manipulation min-h-[56px]">
                        <span id="submit-text">🔐 Ganti Password</span>
                        <span id="submit-loading" class="hidden">🔄 Mengubah Password...</span>
                    </button>
                </div>
            </form>
        </div>

        <!-- Info Tambahan -->
        <div class="bg-yellow-50 border border-yellow-200 rounded-xl p-4 mt-6">
            <div class="flex items-start">
                <div class="text-2xl mr-3">⚠️</div>
                <div>
                    <h3 class="font-semibold text-yellow-800 mb-1">Penting!</h3>
                    <p class="text-sm text-yellow-700">
                        Setelah mengganti password, Anda akan otomatis logout dan harus login kembali dengan password baru.
                        Pastikan Anda mengingat password baru yang telah dibuat.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Loading Modal -->
<div id="loading-modal" class="hidden fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center">
    <div class="bg-white rounded-xl p-6 text-center max-w-sm mx-4">
        <div class="animate-spin w-12 h-12 border-4 border-sky-500 border-t-transparent rounded-full mx-auto mb-4"></div>
        <p class="text-lg font-medium">Mengubah password...</p>
        <p class="text-sm text-gray-600 mt-2">Mohon tunggu sebentar</p>
    </div>
</div>

<!-- Success Modal -->
<div id="success-modal" class="hidden fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center">
    <div class="bg-white rounded-xl p-6 text-center max-w-sm mx-4">
        <div class="text-6xl mb-4">✅</div>
        <h3 class="text-xl font-bold text-green-600 mb-2">Password Berhasil Diubah!</h3>
        <div id="success-message" class="text-sm text-gray-700 mb-4"></div>
        <div class="space-y-3">
            {# Form logout dengan CSRF token yang diperbaiki - menggunakan route yang konsisten #}
            <form method="post" action="{{ path('app_logout_secure') }}" class="inline w-full">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('logout') }}">
                <button type="submit" class="w-full bg-green-600 hover:bg-green-700 text-white py-3 rounded-lg font-medium">
                    🚪 Login Ulang dengan Password Baru
                </button>
            </form>
        </div>
    </div>
</div>

<!-- Error Modal -->
<div id="error-modal" class="hidden fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center">
    <div class="bg-white rounded-xl p-6 text-center max-w-sm mx-4">
        <div class="text-6xl mb-4">❌</div>
        <h3 class="text-xl font-bold text-red-600 mb-2">Gagal Mengganti Password</h3>
        <div id="error-message" class="text-sm text-gray-700 mb-4"></div>
        <button onclick="document.getElementById('error-modal').classList.add('hidden')" 
                class="w-full bg-gray-600 hover:bg-gray-700 text-white py-3 rounded-lg font-medium">
            Tutup
        </button>
    </div>
</div>

<!-- Navigasi Bawah - TETAP PERTAHANKAN -->
<div class="fixed bottom-0 left-0 right-0 bg-sky-400 shadow-2xl border-t border-sky-500 z-50">
    <div class="grid grid-cols-5 text-center">
        <!-- Home -->
        <a href="{{ path('app_dashboard') }}" class="flex flex-col items-center py-3 px-2 text-gray-200 hover:text-white hover:bg-sky-500 transition-colors rounded-lg mx-1">
            <div class="text-lg mb-1">🏠</div>
            <div class="text-xs">Home</div>
        </a>
        
        <!-- Laporan -->
        <a href="{{ path('app_user_laporan') }}" class="flex flex-col items-center py-3 px-2 text-gray-200 hover:text-white hover:bg-sky-500 transition-colors rounded-lg mx-1">
            <div class="text-lg mb-1">📊</div>
            <div class="text-xs">Laporan</div>
        </a>
        
        <!-- Kalender -->
        <a href="{{ path('app_user_kalender') }}" class="flex flex-col items-center py-3 px-2 text-gray-200 hover:text-white hover:bg-sky-500 transition-colors rounded-lg mx-1">
            <div class="text-lg mb-1">📅</div>
            <div class="text-xs">Kalender</div>
        </a>
        
        <!-- Notifikasi -->
        <a href="#" class="flex flex-col items-center py-3 px-2 text-gray-200 hover:text-white hover:bg-sky-500 transition-colors rounded-lg mx-1">
            <div class="text-lg mb-1">🔔</div>
            <div class="text-xs">Notifikasi</div>
        </a>
        
        <!-- Akun Saya - Active -->
        <a href="{{ path('app_profile_change_password') }}" class="flex flex-col items-center py-3 px-2 text-white bg-sky-600 rounded-lg mx-1">
            <div class="text-lg mb-1">👤</div>
            <div class="text-xs font-medium">Akun Saya</div>
        </a>
    </div>
</div>

<script>
class GantiPasswordApp {
    constructor() {
        this.form = document.getElementById('form-ganti-password');
        this.submitBtn = document.getElementById('btn-submit');
        this.init();
    }

    init() {
        this.form.addEventListener('submit', (e) => this.handleSubmit(e));
        
        // Real-time validation
        const passwordBaru = document.getElementById('password_baru');
        const konfirmasiPassword = document.getElementById('konfirmasi_password');
        
        passwordBaru.addEventListener('input', () => this.validatePassword());
        konfirmasiPassword.addEventListener('input', () => this.validatePasswordMatch());
    }

    validatePassword() {
        const passwordBaru = document.getElementById('password_baru');
        const isValid = passwordBaru.value.length >= 6;
        
        if (passwordBaru.value.length > 0) {
            if (isValid) {
                passwordBaru.classList.remove('border-red-300');
                passwordBaru.classList.add('border-green-300');
            } else {
                passwordBaru.classList.remove('border-green-300');
                passwordBaru.classList.add('border-red-300');
            }
        } else {
            passwordBaru.classList.remove('border-red-300', 'border-green-300');
        }
    }

    validatePasswordMatch() {
        const passwordBaru = document.getElementById('password_baru');
        const konfirmasiPassword = document.getElementById('konfirmasi_password');
        
        if (konfirmasiPassword.value.length > 0) {
            if (passwordBaru.value === konfirmasiPassword.value) {
                konfirmasiPassword.classList.remove('border-red-300');
                konfirmasiPassword.classList.add('border-green-300');
            } else {
                konfirmasiPassword.classList.remove('border-green-300');
                konfirmasiPassword.classList.add('border-red-300');
            }
        } else {
            konfirmasiPassword.classList.remove('border-red-300', 'border-green-300');
        }
    }

    async handleSubmit(e) {
        e.preventDefault();

        // Show loading
        document.getElementById('submit-text').classList.add('hidden');
        document.getElementById('submit-loading').classList.remove('hidden');
        this.submitBtn.disabled = true;
        document.getElementById('loading-modal').classList.remove('hidden');

        const formData = new FormData(this.form);

        try {
            const response = await fetch('{{ path('app_profile_update_password') }}', {
                method: 'POST',
                body: formData
            });

            const result = await response.json();

            if (result.success) {
                this.showSuccessModal(result.message);
            } else {
                this.showErrorModal(result.message);
            }
        } catch (error) {
            this.showErrorModal('❌ Terjadi kesalahan koneksi. Silakan coba lagi.');
        } finally {
            // Hide loading
            document.getElementById('submit-text').classList.remove('hidden');
            document.getElementById('submit-loading').classList.add('hidden');
            this.submitBtn.disabled = false;
            document.getElementById('loading-modal').classList.add('hidden');
        }
    }

    showSuccessModal(message) {
        document.getElementById('success-message').innerHTML = message;
        document.getElementById('success-modal').classList.remove('hidden');
    }

    showErrorModal(message) {
        document.getElementById('error-message').innerHTML = message;
        document.getElementById('error-modal').classList.remove('hidden');
    }
}

// Initialize app
document.addEventListener('DOMContentLoaded', () => {
    new GantiPasswordApp();
});
</script>

<style>
/* Mobile Touch Optimization */
.touch-manipulation {
    touch-action: manipulation;
    -webkit-tap-highlight-color: transparent;
}

/* Prevent zoom on input focus (iOS Safari) */
input[type="password"] {
    font-size: 16px;
}

/* Button focus styles */
button:focus-visible {
    outline: 2px solid #0ea5e9;
    outline-offset: 2px;
}

/* Input validation styles */
.border-green-300 {
    border-color: #86efac;
    box-shadow: 0 0 0 1px #86efac;
}

.border-red-300 {
    border-color: #fca5a5;
    box-shadow: 0 0 0 1px #fca5a5;
}
</style>
{% endblock %}