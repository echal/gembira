{% extends 'base.html.twig' %}

{% block title %}Detail Absensi {{ pegawai.nama }} - {{ periode_filter }} - Admin Gembira{% endblock %}

{% block body %}
<!-- Layout dengan Sidebar -->
<div class="flex h-screen bg-gray-100">
    <!-- Sidebar -->
    <div class="w-64 bg-white shadow-lg flex-shrink-0">
        <!-- Header Sidebar -->
        <div class="bg-purple-600 text-white p-4">
            <h1 class="text-lg font-bold">Admin Panel Gembira</h1>
            <p class="text-purple-200 text-sm">{{ admin.namaLengkap }}</p>
        </div>
        
        <!-- Menu Navigation -->
        <nav class="mt-4">
            <!-- Dashboard -->
            <a href="{{ path('app_admin_dashboard') }}" class="flex items-center px-4 py-3 text-gray-700 hover:bg-gray-50 border-l-4 border-transparent hover:border-purple-500">
                <span class="text-lg mr-3">🏠</span>
                <span class="font-medium">Dashboard</span>
            </a>
            
            <!-- User -->
            <a href="{{ path('app_admin_user') }}" class="flex items-center px-4 py-3 text-gray-700 hover:bg-gray-50 border-l-4 border-transparent hover:border-indigo-500">
                <span class="text-lg mr-3">👤</span>
                <span class="font-medium">User</span>
            </a>
            
            <!-- Laporan Bulanan - ACTIVE -->
            <a href="{{ path('app_admin_laporan_bulanan') }}" class="flex items-center px-4 py-3 text-gray-700 bg-gray-50 border-l-4 border-indigo-500">
                <span class="text-lg mr-3">📈</span>
                <span class="font-medium">Laporan Bulanan</span>
            </a>
            
            <!-- Other menu items... -->
            <hr class="my-4">
            
            <!-- Logout -->
            <form method="post" action="{{ path('app_logout') }}" class="mt-4">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('logout') }}">
                <button type="submit" class="w-full flex items-center px-4 py-3 text-red-600 hover:bg-red-50 border-l-4 border-transparent hover:border-red-500">
                    <span class="text-lg mr-3">🚪</span>
                    <span class="font-medium">Logout</span>
                </button>
            </form>
        </nav>
    </div>

    <!-- Main Content Area -->
    <div class="flex-1 overflow-y-auto">
        <!-- Header -->
        <div class="bg-white shadow-sm px-6 py-4 border-b">
            <div class="flex items-center justify-between">
                <div class="flex items-center">
                    <a href="{{ path('app_admin_laporan_bulanan') }}?bulan={{ bulan_nama == 'September' ? '2025-09' : 'current' }}" 
                       class="text-indigo-600 hover:text-indigo-800 mr-4 flex items-center">
                        <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                        </svg>
                        Kembali
                    </a>
                    <div>
                        <h2 class="text-xl font-bold text-gray-800">📋 Detail Absensi - {{ periode_filter }}</h2>
                        <p class="text-sm text-gray-600">{{ pegawai.nama }} ({{ pegawai.nip }})</p>
                    </div>
                </div>
                <div class="text-sm text-gray-600">{{ 'now'|date('d/m/Y H:i') }}</div>
            </div>
        </div>
        
        <!-- Content -->
        <div class="p-6">
            
            <!-- Info Pegawai dan Statistik Bulan -->
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-6">
                
                <!-- Info Pegawai -->
                <div class="bg-white rounded-lg shadow-sm p-6">
                    <h3 class="text-lg font-medium text-gray-900 mb-4 flex items-center">
                        <span class="mr-2">👨‍💼</span> Informasi Pegawai
                    </h3>
                    <div class="space-y-3">
                        <div class="flex justify-between">
                            <span class="text-gray-600">Nama:</span>
                            <span class="font-medium">{{ pegawai.nama }}</span>
                        </div>
                        <div class="flex justify-between">
                            <span class="text-gray-600">NIP:</span>
                            <span class="font-medium">{{ pegawai.nip }}</span>
                        </div>
                        <div class="flex justify-between">
                            <span class="text-gray-600">Unit Kerja:</span>
                            <span class="font-medium">{{ pegawai.namaUnitKerja ?? 'Tidak Ada Unit' }}</span>
                        </div>
                        <div class="flex justify-between">
                            <span class="text-gray-600">Jabatan:</span>
                            <span class="font-medium">{{ pegawai.jabatan ?? 'Tidak Diketahui' }}</span>
                        </div>
                    </div>
                </div>

                <!-- Statistik Bulan -->
                <div class="bg-white rounded-lg shadow-sm p-6">
                    <h3 class="text-lg font-medium text-gray-900 mb-4 flex items-center">
                        <span class="mr-2">📊</span> Statistik {{ periode_filter }}
                    </h3>
                    <div class="space-y-3">
                        <div class="flex justify-between">
                            <span class="text-gray-600">Total Hari Kerja:</span>
                            <span class="font-bold text-gray-900">{{ total_hari_kerja }} hari</span>
                        </div>
                        <div class="flex justify-between">
                            <span class="text-green-600">Hadir:</span>
                            <span class="font-bold text-green-800">{{ statistik_bulan.total_hadir }} hari</span>
                        </div>
                        <div class="flex justify-between">
                            <span class="text-yellow-600">Izin/Sakit:</span>
                            <span class="font-bold text-yellow-800">{{ (statistik_bulan.total_izin ?? 0) + (statistik_bulan.total_sakit ?? 0) }} hari</span>
                        </div>
                        <div class="flex justify-between">
                            <span class="text-red-600">Alpha:</span>
                            <span class="font-bold text-red-800">{{ statistik_bulan.total_alpha }} hari</span>
                        </div>
                        <hr class="border-gray-300">
                        <div class="flex justify-between items-center">
                            <span class="text-gray-900 font-medium">Persentase Kehadiran:</span>
                            <div class="flex items-center">
                                <div class="w-20 bg-gray-200 rounded-full h-2 mr-2">
                                    {% set percentage = persentase_kehadiran %}
                                    {% set color_class = percentage >= 90 ? 'bg-green-600' : (percentage >= 75 ? 'bg-yellow-600' : 'bg-red-600') %}
                                    <div class="h-2 rounded-full {{ color_class }}" style="width: {{ percentage }}%"></div>
                                </div>
                                <span class="font-bold text-gray-900">{{ percentage }}%</span>
                            </div>
                        </div>
                        <div class="flex justify-between">
                            <span class="text-gray-600">Status:</span>
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium {{ status_kehadiran.class }}">
                                {{ status_kehadiran.emoji }} {{ status_kehadiran.text }}
                            </span>
                        </div>
                    </div>
                </div>
                
            </div>

            <!-- TABEL DETAIL: Semua Catatan Absensi Per Bulan -->
            <div class="bg-white rounded-lg shadow-sm mb-6">
                <div class="px-6 py-4 border-b border-gray-200">
                    <h3 class="text-lg font-medium text-gray-900 flex items-center">
                        <span class="mr-2">📅</span> Detail Absensi {{ periode_filter }}
                    </h3>
                    <p class="text-sm text-gray-600 mt-1">Menampilkan semua catatan absensi pegawai dalam periode {{ periode_filter }}</p>
                </div>
                <div class="overflow-x-auto">
                    {% if detail_absensi|length > 0 %}
                        <table class="min-w-full divide-y divide-gray-200">
                            <thead class="bg-gray-50">
                                <tr>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Bulan</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Hari/Tanggal</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Unit Kerja</th>
                                    <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Waktu</th>
                                    <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                                    <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Jadwal</th>
                                    <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Foto</th>
                                </tr>
                            </thead>
                            <tbody class="bg-white divide-y divide-gray-200">
                                {% for detail in detail_absensi %}
                                    <tr class="hover:bg-gray-50">
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                            {{ bulan_nama }}
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <div class="text-sm font-medium text-gray-900">{{ detail.hari_tanggal }}</div>
                                            <div class="text-xs text-gray-500">{{ detail.tanggal|date('Y-m-d') }}</div>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                            {{ detail.unit_kerja }}
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-center">
                                            {% if detail.waktu_absensi %}
                                                <span class="text-sm font-medium text-gray-900">{{ detail.waktu_absensi|date('H:i:s') }}</span>
                                            {% else %}
                                                <span class="text-xs text-gray-400">--:--:--</span>
                                            {% endif %}
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-center">
                                            {% if detail.status == 'hadir' %}
                                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                                    ✅ Hadir
                                                </span>
                                                            {% else %}
                                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                                                    ❌ Alpha
                                                </span>
                                            {% endif %}
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-center text-sm text-gray-900">
                                            {{ detail.jadwal_nama }}
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-center">
                                            {% if detail.foto_path %}
                                                <button onclick="showPhotoModal('{{ detail.foto_path }}')" 
                                                        class="inline-flex items-center px-2 py-1 border border-transparent text-xs leading-4 font-medium rounded text-blue-700 bg-blue-100 hover:bg-blue-200">
                                                    📷 Lihat
                                                </button>
                                            {% else %}
                                                <span class="text-xs text-gray-400">Tidak ada</span>
                                            {% endif %}
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    {% else %}
                        <div class="text-center py-12">
                            <div class="text-6xl mb-4">📅</div>
                            <h3 class="text-lg font-medium text-gray-900 mb-2">Tidak Ada Catatan Absensi</h3>
                            <p class="text-gray-500">
                                Pegawai belum memiliki catatan absensi untuk periode {{ periode_filter }}.
                            </p>
                        </div>
                    {% endif %}
                </div>
            </div>
            
        </div>
    </div>
</div>

<!-- Modal untuk menampilkan foto -->
<div id="photoModal" class="fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full hidden z-50">
    <div class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-md bg-white">
        <div class="mt-3 text-center">
            <h3 class="text-lg font-medium text-gray-900 mb-4">Foto Absensi</h3>
            <img id="photoImage" src="" alt="Foto Absensi" class="w-full h-auto rounded-lg mb-4">
            <button onclick="hidePhotoModal()" 
                    class="px-4 py-2 bg-gray-500 text-white text-base font-medium rounded-md w-full shadow-sm hover:bg-gray-700">
                Tutup
            </button>
        </div>
    </div>
</div>

<script>
function showPhotoModal(fotoPath) {
    const modal = document.getElementById('photoModal');
    const image = document.getElementById('photoImage');
    image.src = '/uploads/absensi/' + fotoPath;
    modal.classList.remove('hidden');
}

function hidePhotoModal() {
    const modal = document.getElementById('photoModal');
    modal.classList.add('hidden');
}

// Close modal when clicking outside
window.onclick = function(event) {
    const modal = document.getElementById('photoModal');
    if (event.target == modal) {
        hidePhotoModal();
    }
}
</script>
{% endblock %}