{% extends 'base.html.twig' %}

{% block title %}Laporan Absensi {{ periode_filter }} - {{ pegawai.nama }} - Gembira{% endblock %}

{# KEAMANAN: Template ini hanya menampilkan data pegawai yang sedang login #}
{# FILTER: Hanya menampilkan data absensi untuk BULAN BERJALAN saja #}

{% block body %}
<!-- User Header Component -->
{% include 'components/user_header.html.twig' with {
    'show_back_button': true,
    'back_url': path('app_dashboard'),
    'title': 'Laporan Absensi ' ~ periode_filter,
    'subtitle': 'üîí Bulan berjalan - Data pribadi Anda',
    'show_welcome': false
} %}

<div class="min-h-screen bg-gradient-to-b from-sky-50 to-sky-100 pb-20">
    <div class="container mx-auto px-4 py-6">
        
        <!-- Info Summary -->
        <div class="bg-white rounded-xl shadow-sm p-4 mb-6 border border-sky-200">
            <div class="flex items-center justify-between">
                <div class="flex items-center">
                    <div class="text-2xl mr-3">üë§</div>
                    <div>
                        <div class="font-semibold text-sky-800">{{ pegawai.nama }}</div>
                        <div class="text-sm text-sky-600">{{ pegawai.jabatan }} - {{ pegawai.unitKerja }}</div>
                        
                        {# FITUR BARU: Status Kehadiran Bulanan di bawah nama user #}
                        {# Status berubah sesuai persentase dan akan reset setiap bulan #}
                        <div class="mt-2">
                            <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium {{ statistik_kehadiran.status_kehadiran.warna_bg }} {{ statistik_kehadiran.status_kehadiran.warna_text }} border {{ statistik_kehadiran.status_kehadiran.warna_border }}">
                                {{ statistik_kehadiran.status_kehadiran.emoji }} {{ statistik_kehadiran.status_kehadiran.text }}
                            </span>
                            <span class="text-xs text-gray-500 ml-2">{{ statistik_kehadiran.persentase_kehadiran }}% kehadiran</span>
                        </div>
                    </div>
                </div>
                <div class="text-right">
                    <div class="text-sm text-gray-600">Total Riwayat</div>
                    <div class="text-xl font-bold text-sky-600">{{ riwayat_absensi|length }}</div>
                    <button onclick="refreshData()" class="text-xs text-blue-500 hover:text-blue-700 mt-1 flex items-center">
                        <span id="refresh-icon">üîÑ</span> <span class="ml-1">Refresh</span>
                    </button>
                </div>
            </div>
        </div>

        <!-- Notifikasi Absensi Berhasil -->
        <div id="success-notification" class="hidden bg-green-50 border border-green-200 rounded-lg p-4 mb-4">
            <div class="flex items-center">
                <div class="text-green-500 text-xl mr-3">‚úÖ</div>
                <div>
                    <h4 class="text-green-800 font-medium">Absensi Berhasil!</h4>
                    <p class="text-green-600 text-sm" id="success-message">Data absensi terbaru telah ditambahkan ke riwayat Anda.</p>
                </div>
                <button onclick="hideSuccessNotification()" class="ml-auto text-green-500 hover:text-green-700">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                </button>
            </div>
        </div>

        <!-- Informasi Periode Filter - Responsive Layout -->
        <div class="bg-blue-50 border border-blue-200 rounded-lg p-3 md:p-4 mb-4">
            <!-- Mobile & Desktop: Stack Layout -->
            <div class="space-y-3">
                <!-- Top: Periode Info -->
                <div class="flex items-start gap-2">
                    <div class="text-blue-500 text-xl flex-shrink-0">üìÖ</div>
                    <div class="flex-1 min-w-0">
                        <h4 class="text-blue-800 font-semibold text-sm md:text-base mb-1">Periode Laporan</h4>
                        <p class="text-blue-600 text-xs md:text-sm leading-snug">
                            Menampilkan semua kategori absensi untuk bulan <strong>{{ periode_filter }}</strong>.
                            Data bulan sebelumnya tidak ditampilkan dalam laporan ini.
                        </p>
                    </div>
                </div>

                <!-- Middle: Statistik Bulan Ini - Full Width Mobile -->
                <div class="bg-white rounded-lg p-3 border border-blue-200">
                    <div class="text-blue-800 font-semibold mb-2 text-xs md:text-sm">Statistik Bulan Ini</div>
                    <div class="grid grid-cols-2 gap-2 text-xs">
                        <!-- Hari Kerja -->
                        <div class="flex justify-between items-center">
                            <span class="text-blue-600">Hari Kerja:</span>
                            <span class="text-blue-800 font-bold">{{ statistik_kehadiran.total_hari_kerja }} hari</span>
                        </div>
                        <!-- Keterangan Admin -->
                        <div class="col-span-2 text-[10px] text-blue-500 italic -mt-1">
                            *Berdasarkan jadwal admin
                        </div>
                        <!-- Hadir -->
                        <div class="flex justify-between items-center">
                            <span class="text-green-600">Hadir:</span>
                            <span class="text-green-800 font-bold">{{ statistik_kehadiran.total_hadir }} hari</span>
                        </div>
                        <!-- Terlambat -->
                        <div class="flex justify-between items-center">
                            <span class="text-yellow-600">Terlambat:</span>
                            <span class="text-yellow-800 font-bold">{{ (statistik_kehadiran.total_izin ?? 0) + (statistik_kehadiran.total_sakit ?? 0) }} hari</span>
                        </div>
                        <!-- Alpha -->
                        <div class="flex justify-between items-center col-span-2">
                            <span class="text-red-600">Alpha:</span>
                            <span class="text-red-800 font-bold">{{ statistik_kehadiran.total_alpha }} hari</span>
                        </div>
                        <!-- Separator -->
                        <hr class="col-span-2 border-blue-200 my-1">
                        <!-- Kehadiran Percentage -->
                        <div class="col-span-2 flex justify-between items-center font-bold text-sm">
                            <span class="text-blue-700">Kehadiran:</span>
                            <span class="text-blue-900 text-base">{{ statistik_kehadiran.persentase_kehadiran }}%</span>
                        </div>
                    </div>
                </div>

                <!-- Bottom: Download Buttons -->
                <div class="flex flex-wrap gap-2">
                    <a href="{{ path('app_user_laporan_download_pdf') }}"
                       class="flex-1 min-w-[140px] inline-flex items-center justify-center px-3 py-2 bg-red-500 hover:bg-red-600 text-white text-xs font-medium rounded-lg transition-colors shadow-sm">
                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                        </svg>
                        Download PDF
                    </a>
                    <a href="{{ path('app_user_laporan_download_excel') }}"
                       class="flex-1 min-w-[140px] inline-flex items-center justify-center px-3 py-2 bg-green-500 hover:bg-green-600 text-white text-xs font-medium rounded-lg transition-colors shadow-sm">
                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                        </svg>
                        Download Excel
                    </a>
                </div>
            </div>
        </div>

        <!-- Riwayat Absensi List -->
        {% if riwayat_absensi|length > 0 %}
            <div class="space-y-3">
                {% for absensi in riwayat_absensi %}
                <div class="bg-white rounded-lg shadow-sm border-l-4 border-sky-400 p-4">
                    <div class="flex items-center justify-between">
                        <div class="flex-1">
                            <!-- Tanggal -->
                            <div class="text-lg font-semibold text-gray-800 mb-1">
                                {{ absensi.tanggal|date('l, d F Y')|replace({
                                    'Monday': 'Senin',
                                    'Tuesday': 'Selasa', 
                                    'Wednesday': 'Rabu',
                                    'Thursday': 'Kamis',
                                    'Friday': 'Jumat',
                                    'Saturday': 'Sabtu',
                                    'Sunday': 'Minggu',
                                    'January': 'Januari',
                                    'February': 'Februari',
                                    'March': 'Maret',
                                    'April': 'April',
                                    'May': 'Mei',
                                    'June': 'Juni',
                                    'July': 'Juli',
                                    'August': 'Agustus',
                                    'September': 'September',
                                    'October': 'Oktober',
                                    'November': 'November',
                                    'December': 'Desember'
                                }) }}
                            </div>
                            
                            <!-- Jam Absensi - Support format lama dan baru -->
                            <div class="flex items-center mb-2">
                                <span class="text-sm text-gray-600 mr-2">Jam Absensi:</span>
                                <span class="text-lg font-bold text-sky-500">
                                    {% if absensi.waktuAbsensi %}
                                        {{ absensi.waktuAbsensi|date('H:i:s') }}
                                    {% elseif absensi.waktuMasuk %}
                                        {{ absensi.waktuMasuk|date('H:i') }}
                                    {% else %}
                                        --:--
                                    {% endif %}
                                </span>
                            </div>
                            
                            <!-- Status Badge - Support format lama dan baru -->
                            {% set status = absensi.status ?? absensi.statusKehadiran %}
                            {% if status == 'hadir' %}
                                <span class="inline-block bg-green-100 text-green-800 text-xs font-medium px-2 py-1 rounded-full">
                                    ‚úÖ Hadir
                                </span>
                            {% else %}
                                <span class="inline-block bg-blue-100 text-blue-800 text-xs font-medium px-2 py-1 rounded-full">
                                    üìù {{ status ? status|title : 'Absensi' }}
                                </span>
                            {% endif %}

                            <!-- Foto Absensi jika ada -->
                            {% if absensi.fotoPath %}
                            <div class="mt-2">
                                <span class="inline-block bg-purple-100 text-purple-800 text-xs font-medium px-2 py-1 rounded-full">
                                    üì∑ Dengan Foto
                                </span>
                            </div>
                            {% endif %}
                        </div>
                        
                        <!-- Keterangan Absensi -->
                        <div class="text-right ml-4">
                            <!-- Sistem Baru (Fleksibel) -->
                            {% if absensi.konfigurasiJadwal %}
                                <div class="text-sm font-medium text-gray-700 mb-1">
                                    {{ absensi.konfigurasiJadwal.emoji }} {{ absensi.konfigurasiJadwal.namaJadwal }}
                                </div>
                                <div class="text-xs text-gray-500">
                                    {{ absensi.konfigurasiJadwal.jamMulai|date('H:i') }} - {{ absensi.konfigurasiJadwal.jamSelesai|date('H:i') }}
                                </div>
                                <!-- Indicator fitur yang digunakan -->
                                {% if absensi.konfigurasiJadwal.perluQrCode or absensi.konfigurasiJadwal.perluKamera %}
                                <div class="text-xs text-blue-500 mt-1">
                                    {% if absensi.konfigurasiJadwal.perluQrCode and absensi.konfigurasiJadwal.perluKamera %}
                                        üì±üì∑ QR + Kamera
                                    {% elseif absensi.konfigurasiJadwal.perluQrCode %}
                                        üì± QR Code
                                    {% elseif absensi.konfigurasiJadwal.perluKamera %}
                                        üì∑ Kamera
                                    {% endif %}
                                </div>
                                {% endif %}
                            <!-- Sistem Lama -->
                            {% elseif absensi.jadwalAbsensi %}
                                <div class="text-sm font-medium text-gray-700 mb-1">
                                    {{ absensi.jadwalAbsensi.emojiJenisAbsensi }} {{ absensi.jadwalAbsensi.namaJenisAbsensi }}
                                </div>
                                <div class="text-xs text-gray-500">
                                    {{ absensi.jadwalAbsensi.jamMulai|date('H:i') }} - {{ absensi.jadwalAbsensi.jamSelesai|date('H:i') }}
                                </div>
                            {% elseif absensi.jenisAbsensi %}
                                <div class="text-sm font-medium text-gray-700 mb-1">
                                    {% set jenis_icons = {
                                        'ibadah_pagi': 'ü§≤',
                                        'bbaq': 'üìñ',
                                        'apel_pagi': 'üè¢',
                                        'upacara_nasional': 'üáÆüá©'
                                    } %}
                                    {{ jenis_icons[absensi.jenisAbsensi] ?? '‚úÖ' }}
                                    {% set jenis_names = {
                                        'ibadah_pagi': 'Ibadah Pagi',
                                        'bbaq': 'BBAQ',
                                        'apel_pagi': 'Apel Pagi',
                                        'upacara_nasional': 'Upacara Nasional'
                                    } %}
                                    {{ jenis_names[absensi.jenisAbsensi] ?? 'Absensi' }}
                                </div>
                            {% else %}
                                <div class="text-sm font-medium text-gray-700 mb-1">
                                    ‚úÖ Absensi Umum
                                </div>
                                <div class="text-xs text-gray-500">
                                    Absensi Manual
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>

            <!-- Load More Info -->
            {% if riwayat_absensi|length >= 50 %}
            <div class="text-center mt-6 p-4">
                <div class="text-sm text-gray-600">
                    Menampilkan 50 riwayat absensi terbaru
                </div>
            </div>
            {% endif %}

        {% else %}
            <!-- Empty State -->
            <div class="bg-white rounded-xl shadow-sm p-8 text-center">
                <div class="text-6xl mb-4">üìã</div>
                <h3 class="text-lg font-semibold text-gray-700 mb-2">Belum Ada Absensi Bulan {{ periode_filter }}</h3>
                <p class="text-gray-500 text-sm mb-6">
                    Anda belum memiliki riwayat absensi untuk bulan <strong>{{ periode_filter }}</strong>. 
                    Mulai absensi dari dashboard untuk melihat laporan di sini.
                    <br><small class="text-gray-400">üîí Sistem hanya menampilkan data bulan berjalan dan milik Anda sendiri</small>
                </p>
                <a href="{{ path('app_dashboard') }}" 
                   class="inline-block bg-sky-500 hover:bg-sky-600 text-white px-6 py-3 rounded-lg font-medium transition-colors">
                    üè† Kembali ke Dashboard
                </a>
            </div>
        {% endif %}
    </div>
</div>

<!-- Bottom Navigation -->
{% include 'components/bottom_nav.html.twig' with {'active_menu': 'laporan'} %}

<style>
/* Mobile Touch Optimization */
.touch-manipulation {
    touch-action: manipulation;
    -webkit-tap-highlight-color: transparent;
}

/* Better card shadows for mobile */
@media (max-width: 768px) {
    .shadow-sm {
        box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
    }
}

/* Smooth transitions */
* {
    -webkit-transition: all 0.2s ease;
    transition: all 0.2s ease;
}

/* Refresh animation */
.refresh-spin {
    animation: spin 1s linear infinite;
}

@keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
}

/* Slide in animation for new records */
.slide-in {
    animation: slideInFromTop 0.5s ease-out;
}

@keyframes slideInFromTop {
    0% {
        transform: translateY(-20px);
        opacity: 0;
    }
    100% {
        transform: translateY(0);
        opacity: 1;
    }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Check for success message from URL params (dari redirect absensi berhasil)
    const urlParams = new URLSearchParams(window.location.search);
    if (urlParams.get('success') === '1') {
        showSuccessNotification();
        // Clean URL without reloading
        const cleanUrl = window.location.pathname;
        history.replaceState({}, document.title, cleanUrl);
    }
    
    // Auto-refresh setiap 30 detik untuk data terbaru
    setInterval(() => {
        checkForNewData();
    }, 30000);
});

function refreshData() {
    const refreshIcon = document.getElementById('refresh-icon');
    refreshIcon.classList.add('refresh-spin');
    
    // Reload halaman untuk mendapatkan data terbaru
    setTimeout(() => {
        window.location.reload();
    }, 500);
}

function showSuccessNotification(message = null) {
    const notification = document.getElementById('success-notification');
    if (message) {
        document.getElementById('success-message').textContent = message;
    }
    notification.classList.remove('hidden');
    
    // Auto hide setelah 5 detik
    setTimeout(() => {
        hideSuccessNotification();
    }, 5000);
}

function hideSuccessNotification() {
    const notification = document.getElementById('success-notification');
    notification.classList.add('hidden');
}

async function checkForNewData() {
    try {
        const response = await fetch('{{ path("app_user_laporan") }}?ajax=1', {
            method: 'GET',
            headers: {
                'X-Requested-With': 'XMLHttpRequest'
            }
        });
        
        if (response.ok) {
            const currentCount = {{ riwayat_absensi|length }};
            const data = await response.json();
            
            // FITUR BARU: Cek perubahan data absensi dan status kehadiran
            if (data.count > currentCount) {
                showSuccessNotification('Ada absensi baru! Klik refresh untuk melihat statistik terbaru.');
            }
            
            // LOG: Tampilkan statistik terbaru di console untuk debugging
            if (data.statistik) {
                console.log('Statistik Kehadiran Terbaru:', {
                    periode: data.periode,
                    persentase: data.statistik.persentase + '%',
                    status: data.statistik.status.text,
                    breakdown: {
                        hadir: data.statistik.total_hadir,
                        izin_sakit: (data.statistik.total_izin || 0) + (data.statistik.total_sakit || 0),
                        alpha: data.statistik.total_alpha
                    }
                });
            }
        }
    } catch (error) {
        console.log('Check data error:', error);
    }
}

// Fungsi untuk menampilkan toast notification
function showToast(message, type = 'success') {
    const toast = document.createElement('div');
    toast.className = `fixed top-20 left-4 right-4 z-50 px-4 py-3 rounded-xl text-white text-sm font-medium shadow-lg ${
        type === 'success' ? 'bg-green-600' : 
        type === 'error' ? 'bg-red-600' : 'bg-blue-600'
    }`;
    toast.textContent = message;
    
    document.body.appendChild(toast);
    
    setTimeout(() => {
        toast.remove();
    }, 4000);
}

// Expose functions to global scope
window.refreshData = refreshData;
window.hideSuccessNotification = hideSuccessNotification;
</script>
{% endblock %}